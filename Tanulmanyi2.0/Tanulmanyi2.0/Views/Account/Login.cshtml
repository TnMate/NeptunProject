
@{
    ViewData["Title"] = "Account";
}

<h2>Account</h2>

@using Tanulmanyi2._0.Models;

@model LoginViewModel
<form asp-controller="Account" asp-action="Login">

    <table>
        <tr>
            <td colspan="2">
                <div class="failureNotification">@ViewBag.Information</div>
                <div asp-validation-summary="ModelOnly" class="failureNotification"></div>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <div class="contentHead">
                    Bejelentkezési adatok:
                </div>
            </td>
        </tr>
        <tr>
            <td width="120">
                Felhasználónév:
            </td>
            <td class="failureNotification">
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </td>
        </tr>
        <tr>
            <td width="120">
                Jelszó:
            </td>
            <td class="failureNotification">
                <input asp-for="UserPassword" />
                <span asp-validation-for="UserPassword"></span>
            </td>
        </tr>
        <tr>
            <td colspan="2" height="50">
                <input type="submit" value="Bejelentkezés" class="button" />
            </td>
        </tr>
    </table>
</form>